@model MVC.Models.tblUser
      <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
        *{
            font-family: Arial, Helvetica, sans-serif;
        }
        body{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
                        background: linear-gradient(270deg,#52a3e5, #0a487a, #04054b, #02032b);

        }
        .box{
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
            background: linear-gradient(270deg,#52a3e5, #0a487a, #04054b, #02032b);
        }

        .container{
            border: 3px solid rgba(255, 255, 255, 0.341);
            border-image-slice: 1;
            border-radius: 32px;
            position: relative;
            background-color: rgb(145, 186, 215);
            width: 560px;
            min-height: 260px;
            padding: 12px;
            display: flex;
            z-index: 3;
            padding-top: 100px;
            align-items: start;
            justify-content: center;
            box-shadow: 5px 10px 12px rgba(2, 11, 90, 0.3);
            
        }

        input{
            border: 0;
            padding: 18px 24px;
            width: 300px;
            background-color: rgb(1, 11, 84);
            box-shadow: inset 2px 2px 10px rgba(0, 0, 0, 0.673);
            color: white;
            border-radius: 12px;
            font-size: 16px;
            
        }

        input::placeholder{
            color: rgb(255, 255, 255);
        }

        .field{
            margin-top: 22px;
            border: 2px solid black;
            border-radius: 14px;
            padding-left: 50px;
            box-shadow: 2px 2px 10px rgba(255, 255, 255, 0.602);
        }

        .circle{
            display: flex;
            width: 150px;
            height: 150px;
            position: absolute;
            border: 2px solid rgb(47, 142, 250);
            top: -90px;
            justify-content: center;
            align-items: center;
            border-radius: 120px;
            filter: drop-shadow(5px 16px 10px rgba(4, 4, 77, 0.721));
            background-color: black;

        }

        .circle2{
            width: 110px;
            height: 110px;
            margin: 12px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 120px;
            background-color: rgb(2, 10, 54);
            border: 6px solid white;
        }
        img{
            width: 110px;
            height: 110px;
            object-fit: cover;
            border-radius: 120px;
        }
        .button-box{
            width: 450px;
            height: 160px;
            border-radius: 32px;
            top: 320px;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2;
            border: 3px solid rgba(255, 255, 255, 0.341);
            box-shadow: 8px 10px 12px rgba(108, 99, 99, 0.403);
            background-color: rgb(145, 186, 215);
            position: absolute;
        }

        .prime{
            position: relative;
            display: flex;
            justify-content: center;
        }
        .btn{
            margin-top: 80px;
            width: 200px;
            font-size: 22px;
            padding: 12px 32px;
            color: white;
            background-color: rgb(10, 3, 85);
            font-weight: 600;
            border: 2px solid white;
            box-shadow: 6px 6px 12px black;
            box-shadow: inset 2px 0.5px 8px black;
            position: absolute;
            top: 330px;
            left: 175px;
            cursor: pointer;
            border-radius: 12px;
        }

        .btn:hover{
            text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.696);
            box-shadow: 0px 0px 12px rgba(255, 255, 255, 0.901);

        }
        
        .reg{
            margin-top: 80px;
            text-align: center;
        }
        span{
            text-decoration: underline;
            cursor: pointer;
        }
        
    </style>

<div class="box">
        <div class="prime">
            <div class="container">
                <div class="circle">
                    <div class="circle2">
                        <img src="" alt="">
                    </div>
                </div>
                <form asp-action="Login" id="form">
                    <div class="field">
                        <input type="text" id="c_uemail" asp-for="c_uemail" placeholder="Email Id"/>
                        @* <input type="hidden" id="hiddenEmail" name="c_uemail" asp-for="c_uemail"/> *@
                    </div>
                    <div class="field">
                        <input type="password" id="c_password" asp-for="c_password" placeholder="Password"/>
                        @* <input type="hidden" id="hiddenPassword" name="c_password" asp-for="c_password"/> *@
                    </div>
                    
                    <p class="reg">don't have account? <a asp-action="Register">Register</a></p>
                    <input id="addBtn" class="btn" type="submit" value="Login"/>
                </form>
            </div>
            <div class="button-box">
                
            </div>
        </div>
    </div>

