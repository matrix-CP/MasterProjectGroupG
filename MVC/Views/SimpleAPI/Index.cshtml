<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    @* if (localStorage.getItem('token') == null) {
        window.location = '/MvcUser/Login';
    } *@

    $(document).ready(function () {
        LoadStudents();
    });

    function LoadStudents() {
        var settings = {
            "url": "https://localhost:7022/api/SimpleAPI/GetAllEmployee",
            "method": "GET",
            "timeout": 0,
            "headers": { "Authorization": 'Bearer ' + localStorage.getItem('token') }
        };

        $.ajax(settings).done(function (response) {
            var emps = "";
            $.each(response, function (index, value) {
                emps += '<tr>'
                 @* + '<td><input type="checkbox" class="studentCheckbox" data-student-id="' + value.c_empid + '"></td>' *@
                  
                    + '<td>' + value.c_empid + '</td>'
                    + '<td>' + value.c_empname + '</td>'
                    + '<td>' + value.c_empgender + '</td>'
                    + '<td>' + value.c_dob + '</td>'
                    + '<td>' + value.c_shift + '</td>'
                    + '<td>' + value.depname + '</td>'
                    + '<td><img src="'+value.c_img+'" alt="'+value.c_img+'" width="100"/></td>'
                    + '<td> <a href="/SimpleAPI/Edit/?id=' + value.c_empid + '" class="text text-primary">Edit</a></td>' 
                    + '<td> <a href="#" onclick="DeleteStudent(' + value.c_empid + ')" class="text text-danger">Delete</a></td>' 
                    + '</tr>';
            });
            $('#tableStudents').append(emps);
            console.log(response);
        });
    }

    function DeleteStudent(id) {
    if (confirm("Do you want to delete") == true) {
        var settings = {
            "url": "https://localhost:7022/api/SimpleAPI/delete/" + id,
            "method": "DELETE",
            "timeout": 0,
            "headers": { "Authorization": 'Bearer ' + localStorage.getItem('token') }
        };

        $.ajax(settings).done(function (response) {
            window.location = "/SimpleAPI/Index";
        });
    } 
 }

</script>


<script>



$(document).ready(function () {
  
    $('#deleteSelectedBtn').click(function () {
        var selectedIds = []; 
        $('.studentCheckbox:checked').each(function () {
            selectedIds.push($(this).data('student-id')); 
        });

        
        if (selectedIds.length === 0) {
            alert("Please select at least one student to delete.");
            return;
        }

        if (confirm("Do you want to delete selected students?")) {

            var deleteSettings = {
                "url": "https://localhost:7005/api/StudentApi/selectdelete",
                "method": "DELETE",
                "data": JSON.stringify(selectedIds),
                "contentType": "application/json",
                "headers": { "Authorization": 'Bearer ' + localStorage.getItem('token') }
            };

            $.ajax(deleteSettings).done(function (response) {
                // Reload the page after deletion
                window.location.reload();
            }).fail(function (jqXHR, textStatus, errorThrown) {
                alert("Error deleting selected students: " + errorThrown);
            });
        }
    });

    $('#login').click(function () {
        localStorage.removeItem('token');
        window.location = '/SimpleAPI/Login';
    });
});






</script>

